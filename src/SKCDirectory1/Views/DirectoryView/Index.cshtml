@model IEnumerable<SKCDirectory1.Models.DirectoryView>

@{ 
    ViewBag.Title = "Directory";
}

<h2>Directory</h2>
<a asp-controller="DirectoryView" asp-action="Group">List by Department</a>

<br />
<br />

<form asp-controller="DirectoryView" asp-action="Index" method="get">
    <p>
        Name: <input type="text" name="SearchString">
        <input type="submit" value="Search" />
        <input type="submit" value="Clear Search" />
    </p>
</form>



<table class="table">
    <tr>
        <th>FullName</th>
        <th>Email</th>
        <th>Building</th>
        <th>Office Number</th>
        <th>Phone Number</th>
        <th>Department</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a asp-action="DirectoryEntry" asp-controller="DirectoryView" asp-route-id="@item.UserId">@item.FullName</a>
                @*@Html.DisplayFor(modelItem => item.FullName)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Building)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>

        </tr>
    }
</table>
